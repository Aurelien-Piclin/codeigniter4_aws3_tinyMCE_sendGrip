{% set title = 'Contact' %}
{%  extends "./layout/layout.html.twig" %}

{% block css %}{% endblock %}

{%  block content %}
    <h1 class="my-5 text-center">Contact</h1>
    {% if validations is defined and validations.listErrors() is not empty %}
        <div class="alert alert-warning">
            {{ validations.listErrors()|raw }}
        </div>
    {% endif %}

    <form method="post" class="col-lg-10 mx-auto">
    <div class="mb-3">
        <label for="emailRecipient" class="form-label">Recipient email <span class="fw-bold text-danger">*</span></label>
        <input type="email" class="form-control" id="emailRecipient" name="emailRecipient" placeholder="name@example.com" value="{{ post.emailRecipient }}" maxlength="250" required>
    </div>
    <div class="mb-3">
        <label for="emailSubject" class="form-label">Email subject <span class="fw-bold text-danger">*</span></label>
        <input type="text" class="form-control" id="emailSubject" name="emailSubject" value="{{ post.emailSubject }}" maxlength="250" required>
    </div>
    <div class="mb-3">
        <label for="emailBody" class="form-label">Body <span class="fw-bold text-danger">*</span></label>
        <textarea id="emailBody" name="emailBody" rows="3">{{ post.emailBody|raw }}</textarea>
    </div>
        {{ csrf_field()|raw }}
        <div class="text-center">
            <button type="submit" class="btn btn-success">Send</button>
        </div>
    </form>

{% endblock %}


{% block js %}
    <script src="https://cdn.tiny.cloud/1/fpdp0gm95ju0hm7wybmcg6dgpn1x16lg7dzwvnjc5tvczeiz/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script type="text/javascript">
    tinymce.init({
        selector: 'textarea',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | align lineheight | tinycomments | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
        placeholder: 'Type here...'
    });
</script>
{% endblock %}